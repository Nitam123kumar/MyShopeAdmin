<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllFragments.UploadProductsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/lipistik" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Beauty"
                    android:textSize="20dp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Upload This Type Products"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/uploadStatusProductsImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/img" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:background="@color/white"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/secondListUploadImageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/imarhs" />

                <TextView
                    android:id="@+id/secondListUploadTittleTV"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Women Printed Kurta"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/secondListUploadTittleTV2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Neque porro quisquam est qui"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/secondListUploadTittleTV3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="dolorem ipsum quia"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/secondListUploadPriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:text="₹1500"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Upload This Type Products"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/uploadProductsSecondListImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/img" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:background="@color/white"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/secondListImageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/imarhs" />

                <TextView
                    android:id="@+id/secondListTittleTV"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Women Printed Kurta"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/secondListTittleTV2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Neque porro quisquam est qui"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/secondListTittleTV3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="dolorem ipsum quia"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/secondListPriceTV"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:text="₹1500"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Upload This Type Products"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/uploadProductsList3ImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/img" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>