<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".StatusProductUploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="200dp">

        <ImageView
            android:id="@+id/statusUploadImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/lipistik" />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp">
        <EditText
            android:id="@+id/statusTittleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status Tittle"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/statusUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sumit Button"
        android:layout_marginTop="20dp"
        />


</LinearLayout>